CC = gcc
SRC = main.c school.c
NAME = school
MYCFLAGS = -Wall -Werror -Wextra -pedantic

all: $(SRC:.c=.o) m.h
	$(CC) $(MYCFLAGS) $(SRC:.c=.o) -o $(NAME)

CLEAN_OBJ = *~ $(NAME)

clean:
	$(RM) $(CLEAN_OBJ)

oclean: CLEAN_OBJ = $(SRC:.c=.o)
oclean: clean

fclean:
	$(RM) $(SRC:.c=.o) $(NAME) *~

re: fclean all
